.box{
    width:400px;
    overflow: hidden;
    border:1px solid #ccc;
    border-radius: 2px;
    margin: 20px 0;
    padding:10px;
}



.box dl{
    clear: both;
    float: left;
    padding: 0;
    width: 100%;
    margin:10px;
}
.box dl dt{
    color: #777;
    float: left;
    font-size: 14px;
    line-height: 28px;
    text-align: right;
    width: 22%;
}

.box dl dd {
    float: right;
    text-align: left;
    width: 75%;
    position: relative;
}
.box dl dd .text {
    background-color: #fff;
    border: 1px solid #bbb;
    font-family: Tahoma;
    height: 20px;
    line-height: 20px;
    padding: 3px !important;
    width: 200px;
}
.add_ent {
    background:#f08300;
    border: 0 none;
    border-radius:2px;
    color: #fff;
    cursor: pointer;
    font-size: 14px;
    font-weight: 700;
    height: 34px;
    margin: 0;
    padding: 0;
    vertical-align: middle;
    width: 210px;
    float: left;
    text-align: center;
}





