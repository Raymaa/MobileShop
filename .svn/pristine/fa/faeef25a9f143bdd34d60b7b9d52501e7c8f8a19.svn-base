<?xml version="1.0" encoding="UTF-8" ?>  
<!DOCTYPE mapper PUBLIC "-//ibatis.apache.org//DTD Mapper 3.0//EN"      
 "http://ibatis.apache.org/dtd/ibatis-3-mapper.dtd">
 
<mapper namespace="com.huatec.edu.mobileshop.dao.AdminDao">
	<!-- 缓存配置-->
	<cache eviction="LRU" flushInterval="30000" size="512" readOnly="true"/>
	<!-- 管理员表、角色表关联查询 -->
	<select id="findUnion" resultMap="adminMap1">
		select ma.*,mr.role_id,mr.name
		from ms_admin ma
		join ms_role mr
		on ma.role_id=mr.role_id
	</select>
	<resultMap type="com.huatec.edu.mobileshop.entity.Admin" id="adminMap1">
		<id property="admin_id" column="admin_id"/>
		<result property="username" column="username"/>
		<result property="password" column="password"/>
		<result property="email" column="email"/>
		<result property="real_name" column="real_name"/>
		<result property="sex" column="sex"/>
		<result property="mobile" column="mobile"/>
		<result property="role_id" column="role_id"/>
		<result property="creatime" column="creatime"/>
		<result property="modifytime" column="modifytime"/>
		<association property="briefRole" 
		javaType="com.huatec.edu.mobileshop.entity.brief.BriefRole">
			<id property="role_id" column="role_id"/>
			<result property="name" column="name"/>
		</association>
	</resultMap>
	
	<!-- 动态查询 -->
	<select id="dynamicFind" parameterType="map" 
	resultType="com.huatec.edu.mobileshop.entity.Admin">
		select * from ms_admin
		<where>
			<if test="username!=null">
				username=#{username}
			</if>
			<if test="email!=null">
				and email=#{email}
			</if>
			<if test="mobile!=null">
				and mobile=#{mobile}
			</if>
		</where>
	</select>
	<!-- insert元素,在此元素内写增加的sql语句， parameterType：参数类型-->
	<insert id="save" parameterType="com.huatec.edu.mobileshop.entity.Admin" 
	useGeneratedKeys="true" keyProperty="admin_id" >
		insert into ms_admin
		 (admin_id,username,password,email,real_name,
		 sex,mobile,role_id,creatime,modifytime)
		 values(#{admin_id},#{username},#{password},#{email},#{real_name},
		 #{sex},#{mobile},#{role_id},#{creatime},#{modifytime})
	</insert>
	
	<!-- select元素，在此元素内写查询语句 -->
	<select id="findAll" resultType="com.huatec.edu.mobileshop.entity.Admin">
		select * from ms_admin
	</select>
	
	<!-- delete元素，在此元素内写删除语句 -->
	<delete id="deleteById" parameterType="int">
		delete from ms_admin where admin_id=#{admin_id}
	</delete>
	
	<select id="findById" parameterType="int" 
	resultType="com.huatec.edu.mobileshop.entity.Admin">
		select * from ms_admin where admin_id=#{admin_id}
	</select>
	<!-- 动态更新 -->
	<update id="dynamicUpdate" 
	parameterType="com.huatec.edu.mobileshop.entity.Admin">
		update ms_admin
		<set>
			<if test="username!=null">
				username=#{username},
			</if>
			<if test="password!=null">
				password=#{password},
			</if>
			<if test="email!=null">
				email=#{email},
			</if>
			<if test="real_name!=null">
				real_name=#{real_name},
			</if>
			<if test="sex!=null">
				sex=#{sex},
			</if>
			<if test="mobile!=null">
				mobile=#{mobile},
			</if>
			<if test="role_id!=null">
				role_id=#{role_id},
			</if>
			<if test="modifytime!=null">
				modifytime=#{modifytime}
			</if>
		</set>
		where admin_id=#{admin_id}
	</update>
	
</mapper>